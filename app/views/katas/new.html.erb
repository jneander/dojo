<h1><%= title %></h1>

<%= form_for(@kata) do |f| %>
  <div class='field'>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class='field'>
    <%= f.label :link %><br />
    <%= f.text_field :link %>
  </div>
  <div class='field'>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  <div class='actions'>
    <%= f.submit "Submit" %>
  </div>
<% end %>
